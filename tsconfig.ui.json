{
    "extends": [
        "@tsconfig/recommended/tsconfig.json",
        "@tsconfig/strictest/tsconfig.json",
        "@tsconfig/vite-react/tsconfig.json",
    ],
    "compilerOptions": {
        "esModuleInterop": true,
        "noEmit": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "jsx": "react-jsx",
    },
    "include": [
        "src/ui/**/*",
        "src/server/**/*",
        "src/functions/**/*",
    ],
    "exclude": [
        "dist/",
    ]
}